<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: "Login"}) %> 

<body class="bg-dark text-white">
    <div class="container flex-grow-1">
        
        <div class="my-3">
            <h3 class="text-center">Sign in</h3>
        </div>
        <div class="box">
            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                  </div>
                  
            <% } %>
            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control bg-dark text-white" id="username" placeholder="Username...">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control bg-dark text-white" id="password" placeholder="password">
                </div>
    
                <div class="d-grid gap-2">
                    <button role="submit" class="btn btn-outline-success">Login</button>
                    <a href="#" class="btn btn-outline-primary">Forgot Password?</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %> 
</body>
</html>